@using Rocky.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IUserService _userService



<ul class="navbar-nav">

    @if (_userService.IsUserSignedIn())
    {
        <li class="nav-item">
            <a id="manage" class="nav-link" href="#" title="Manage">Hello @_userService.GetUserName()!</a>
        </li>
        <li class="nav-item">
            <form asp-controller="Account" asp-action="Logout" id="logoutForm" class="form-inline" >
                <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" id="register" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
        
</ul>